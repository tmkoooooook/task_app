<h2>スケジュール作成</h2>
<% if flash.notice %>
  <p class="notice"><%= flash.notice %></p>
<% end %>
<%= render "shared/error" , obj: @schedule %>

<%= form_for @schedule do |f| %>
<table>

  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th><%= f.label :start_day, "開始日" %></th>
    <td><%= f.datetime_field :start_day %></td>
  </tr>
  <tr>
    <th><%= f.label :end_day, "終了日" %></th>
    <td><%= f.datetime_field :end_day %></td>
  </tr>
  <tr>
    <th><%= f.label :all_day, "終日" %></th>
    <td>
      <%= f.hidden_field :all_day, value: 0 %>
      <%= f.check_box :all_day %>終日の場合はチェックを入れます</td>

  </tr>
  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_area :memo, class: "textarea" %></td>
  </tr>
</table>
<div class="">
  <ul>
    <li><%= f.submit "スケジュールを登録する" %></li>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %><li>
  </ul>
</div>
<% end %>
